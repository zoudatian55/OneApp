<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tl_iconGravity="BOTTOM"
        app:tl_underline_color="#e6dede"
        app:tl_textsize="0dp"></com.flyco.tablayout.CommonTabLayout>

    <View
        android:id="@+id/line2_main"
        android:layout_above="@id/tabLayout_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6dede"></View>

    <FrameLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@id/line2_main"></FrameLayout>

    <RelativeLayout
        android:id="@+id/top_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"/>

        <ImageView
            android:id="@+id/indiv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/individual_center"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1_main"
        android:layout_below="@id/top_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6dede"></View>



</RelativeLayout>