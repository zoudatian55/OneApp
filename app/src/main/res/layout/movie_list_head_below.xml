<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/movie_ticket"
            android:id="@+id/image_buy"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_share"
            android:layout_alignParentRight="true"
            android:src="@drawable/share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/text_sroce"
            android:text="@string/movie_sroce"
            android:layout_toLeftOf="@id/image_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/sroce"
            android:padding="10dp"
            android:src="@drawable/plz_grade"
            android:layout_toLeftOf="@id/text_sroce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>