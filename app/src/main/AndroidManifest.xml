<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oneapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.GuideActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeListActivity" />
        <activity android:name=".activity.HomeGridActivity" />
        <activity android:name=".activity.GridActivity"></activity>
        <activity
            android:name=".activity.MovieDetailActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".activity.SingerDetailActivity"
            android:theme="@style/NoActionBarTheme"/>
        <activity
            android:name=".activity.MonthListActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activity.EveryMonthActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name=".activity.EverySongDetailActivity"
            android:theme="@style/NoActionBarTheme"></activity>
    </application>

</manifest>